<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessError">

    <TextView
        android:id="@+id/tvTxtError"
        android:layout_width="413dp"
        android:layout_height="95dp"
        android:background="#CD1111"
        android:text="@string/textError"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLoginError"
        android:layout_width="206dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:text="@string/btnLoginError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTxtError" />
</androidx.constraintlayout.widget.ConstraintLayout>